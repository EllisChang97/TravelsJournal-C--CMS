@model TravelsJournal.Models.DestinationDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Destination?</h2>
<a href="/Destination/List">Cancel</a>
<h2>@Model.DestinationName</h2>
<div>Summary: @Model.DestinationSummary</div>
<div>Rating: @Model.RatingID</div>
<form action="/Destination/Delete/@Model.DestinationID" method="POST">
    <input type="submit" value="Confirm Delete" />

</form>
