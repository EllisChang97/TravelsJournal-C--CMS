@model IEnumerable<TravelsJournal.Models.RatingDto>

@{
    ViewBag.Title = "Create";
}

<h2>Create Destination</h2>
<form action="/Destination/Create" method="POST">
    <div>
        <label>Name:</label> <input type="text" name="DestinationName" />
    </div>
    <div>
        <label>Summary:</label> <input type="text" name="DestinationSummary" />
    </div>
    <div>
        <label>Rating ID:</label> 
        <select name="RatingID">
            @foreach (var rating in Model)
            {
                <option value="@rating.RatingID">@rating.RatingDescription</option>

            }
        </select>

    </div>
    <div>
        <input type="submit" value="Add Destination" />
    </div>
</form>
<a href="/destination/list">Back</a>