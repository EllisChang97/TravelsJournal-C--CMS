@model TravelsJournal.Models.ViewModels.UpdateDestination

@{
    ViewBag.Title = "Edit";
}

<h2>Update Destination</h2>
<form action="/Destination/Update/@Model.SelectedDestination.DestinationID" method="POST">
    <div style="display:none;">
        @* Pass through the Destination ID *@
        <input type="text" name="DestinationID" value="@Model.SelectedDestination.DestinationID" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="DestinationName" value="@Model.SelectedDestination.DestinationName" />
    </div>
    <div>
        <label>Summary:</label> <input type="text" name="DestinationSummary" value="@Model.SelectedDestination.DestinationSummary" />
    </div>
    <div>
        <label>Rating ID:</label>

        <select name="RatingID">
            @foreach (var rating in Model.RatingOptions)
            {
                string selected = "";
                if (rating.RatingID == Model.SelectedDestination.RatingID)
                {
                    selected = "selected";
                }
                <option value="@rating.RatingID" @selected>@rating.RatingDescription</option>

            }
        </select>
    </div>
    <div>
        <input type="submit" value="Update Destination" />

    </div>
    
</form>
<a href="/Destination/List">Cancel</a>